class Preloader extends Phaser.Scene
{
    constructor ()
    {
        super({key: 'Preloader'});
    }

    preload ()
    {
        this.loading = this.add.image(512, 384, 'loading');

        this.load.setPath('/assets/imgs/');

        this.load.image('desk');


        this.loading.once('pointerdown', () => {
            this.scene.start('MenuScene');
    });
}
}
